<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/white" >

    <LinearLayout
        android:id="@+id/mainBase"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/sdk_ver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="@string/uninitiated"
                android:textColor="@color/demo_base_info" />

            <TextView
                android:id="@+id/channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="@string/uninitiated"
                android:textColor="@color/demo_base_info" />
        </LinearLayout>

        <TextView
            android:id="@+id/login_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="@string/unlogin"
            android:minHeight="60dp"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="登录选项"
                    android:textColor="@android:color/black" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:stretchColumns="*" >

                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                        <CheckBox
                            android:id="@+id/isShowSwitchButton"
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="显示账号切换按钮"
                            android:textColor="#000000" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <CheckBox
                            android:id="@+id/isAutoLoginHideUI"
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="静默自动登录"
                            android:textColor="#000000" />
                    </TableRow>
                    
                    <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                        <CheckBox
                            android:id="@+id/send_qid"
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:checked="true"
                            android:text="是否传递QID字段"
                            android:textColor="#000000" />
                    </TableRow>
                    
                    <TableRow
                        android:id="@+id/tableRow9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <Button
                            android:id="@+id/btn_login_choose"
                            style="@style/demo_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="登录"
                            android:textColor="@android:color/black" />

                        <Button
                            android:id="@+id/btn_switch_account"
                            style="@style/demo_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="切换账号"
                            android:textColor="@android:color/black" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- payment 非收银台类型，独立支付-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout style="@style/demo_layout"
                android:orientation="horizontal" >
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:layout_margin="5dp"
                    android:text="支付金额"
                    android:textSize="15sp"
                    android:textStyle="bold|italic"
                    android:textColor="@android:color/black" />
                <EditText
                    android:id="@+id/et_input_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:hint="请输入支付金额(单位:分)"
                    android:inputType="number"
                    android:textColor="@android:color/black"
                    android:textColorHint="#ff999999"
                     />
            </LinearLayout>
        </LinearLayout>
        
        <!-- payment 收银台-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout style="@style/demo_layout"
                android:layout_gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有收银台"
                    android:textSize="15sp"
                    android:textStyle="bold|italic"
                    android:textColor="@android:color/black" />

                <CheckBox
                    android:id="@+id/isPayFixed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="定额支付"
                    android:textColor="@android:color/black"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_pay"
                    style="@style/demo_btn"
                    android:text="支付"
                    android:textColor="@android:color/black" />
            </LinearLayout>
            
            <LinearLayout style="@style/demo_layout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无收银台"
                    android:textSize="15sp"
                    android:textStyle="bold|italic"
                    android:textColor="@android:color/black" />
                <Button
                    android:id="@+id/btn_weixin_pay"
                    style="@style/demo_btn"
                    android:text="微信支付"
                    android:textColor="@android:color/black" />
                <Button
                    android:id="@+id/btn_ali_pay"
                    style="@style/demo_btn"
                    android:text="支付宝支付"
                    android:textColor="@android:color/black" />
            </LinearLayout>
            
        </LinearLayout>

        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >
        </LinearLayout>

        <!-- 离线模式登录 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <!-- 获取社交模块初始化信息 -->

            <LinearLayout style="@style/demo_layout"
                android:visibility="gone" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="扫码支付"
                    android:textSize="15sp"
                    android:textStyle="bold|italic"
                    android:textColor="@android:color/black" />
                <Button
                    android:id="@+id/btn_qr_pay"
                    style="@style/demo_btn"
                    android:text="全支付"
                    android:textColor="@android:color/black" />
                <Button
                    android:id="@+id/btn_qr_weixin_pay"
                    style="@style/demo_btn"
                    android:text="微信支付"
                    android:textColor="@android:color/black" />
                <Button
                    android:id="@+id/btn_qr_ali_pay"
                    style="@style/demo_btn"
                    android:text="支付宝"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>

        <!-- 邀请好友 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" 
            android:visibility="gone">

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="@string/invite_friend"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/edit_invite_nick"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="对方昵称"
                    android:selectAllOnFocus="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="#ff999999" />

                <EditText
                    android:id="@+id/edit_invite_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="phone"
                    android:selectAllOnFocus="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="#ff999999" />

                <EditText
                    android:id="@+id/edit_invite_qid"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="qid"
                    android:selectAllOnFocus="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="#ff999999" />

                <EditText
                    android:id="@+id/edit_invite_sms"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/yaoqing"
                    android:selectAllOnFocus="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="#ff999999" />

                <Button
                    android:id="@+id/btn_invite_friend_batch"
                    style="@style/demo_btn"
                    android:text="@string/invite_friend_btntxt"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>

        <!-- 上传积分 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" 
            android:visibility="gone">

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="@string/upload_score"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="score："
                        android:textColor="@android:color/black" />

                    <EditText
                        android:id="@+id/edit_upload_score"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:selectAllOnFocus="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="#ff999999" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="topnid："
                        android:textColor="@android:color/black" />

                    <EditText
                        android:id="@+id/edit_score_topnid"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:selectAllOnFocus="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="#ff999999" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_upload_score"
                    style="@style/demo_btn"
                    android:text="@string/upload_score_btntxt"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>

        <!-- 获取游戏中好友排行榜 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:visibility="gone" >

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="@string/get_game_top_friend"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="start:"
                        android:textColor="@android:color/black" />

                    <EditText
                        android:id="@+id/edit_getgamefrient_top_start"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="0"
                        android:inputType="number"
                        android:selectAllOnFocus="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="#ff999999" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="count: "
                        android:textColor="@android:color/black" />

                    <EditText
                        android:id="@+id/edit_getgamefrient_top_count"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="大于或等于20"
                        android:inputType="number"
                        android:selectAllOnFocus="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="#ff999999" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="topnid: "
                        android:textColor="@android:color/black" />

                    <EditText
                        android:id="@+id/edit_getgamefrient_topnid"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="0"
                        android:inputType="number"
                        android:selectAllOnFocus="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="#ff999999" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="orderby: "
                        android:textColor="@android:color/black" />

                    <EditText
                        android:id="@+id/edit_getgamefrient_orderby"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:selectAllOnFocus="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="#ff999999" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_get_game_top_friend"
                    style="@style/demo_btn"
                    android:text="@string/get_game_top_friend_btntxt"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>
        <!-- 获取游戏中的排行榜 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" 
            android:visibility="gone">

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="获取游戏全球排名"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="topnid: "
                        android:textColor="@android:color/black" />

                    <EditText
                        android:id="@+id/edit_getgame_topnid"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="0"
                        android:inputType="number"
                        android:selectAllOnFocus="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="#ff999999" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="orderby: "
                        android:textColor="@android:color/black" />

                    <EditText
                        android:id="@+id/edit_getgame_orderby"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:selectAllOnFocus="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="#ff999999" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_get_game_top"
                    style="@style/demo_btn"
                    android:text="@string/get_game_top_btntxt"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="@string/get_contact_content"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="start:"
                        android:textColor="@android:color/black" />

                    <EditText
                        android:id="@+id/edit_getcontact_start"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="0"
                        android:inputType="number"
                        android:selectAllOnFocus="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="#ff999999" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="count: "
                        android:textColor="@android:color/black" />

                    <EditText
                        android:id="@+id/edit_getcontact_count"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="20"
                        android:inputType="number"
                        android:selectAllOnFocus="true"
                        android:text="20"
                        android:textColor="@android:color/black"
                        android:textColorHint="#ff999999" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_get_contact_content"
                    style="@style/demo_btn"
                    android:text="@string/get_game_friend_btntxt"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >
            
            <!-- 注销登录 -->
            <LinearLayout style="@style/demo_layout" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="注销登录"
                    android:textColorHint="#ff999999" />

                <Button
                    android:id="@+id/btn_logout"
                    style="@style/demo_btn"
                    android:text="注销"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:visibility="gone" >

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="sdk邀请好友"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/et_invite_msg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="邀请信息"
                    android:textColor="@android:color/black"
                    android:textColorHint="#ff999999" />

                <Button
                    android:id="@+id/btn_invite_friend_by_sdk"
                    style="@style/demo_btn"
                    android:text="邀请"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" 
            android:visibility="gone">

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="显示好友排行"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/et_rank_id"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="排行榜id"
                    android:textColor="@android:color/black"
                    android:textColorHint="#ff999999" />

                <Button
                    android:id="@+id/btn_display_rank"
                    style="@style/demo_btn"
                    android:text="显示"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="进入论坛"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/btn_bbs"
                    style="@style/demo_btn"
                    android:text="进入"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="退出接口"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/btn_quit"
                    style="@style/demo_btn"
                    android:text="退出"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="防沉迷"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/btn_antAddiction"
                    style="@style/demo_btn"
                    android:text="查询"
